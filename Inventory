# инвентарь может быть статическим и динамическим
# в простейшем случае статический инвентарь - это список имен хостов с их ip-адресами
# хосты могут быть объединены в группы для удобства управления
# один хост может состоять в нескольких группах
# вложенные группы также возможны
# переменные можно задавать в инвентаре, но это устаревшая практика
# можно использовать диапазоны, например server[1:20] = server1 до server20, 192.168.[4:5].[0:255] = два полных диапазона адресов класса C
/etc/ansible/hosts   #инвентарь по умолчанию
# альтернативные варианты инвентаря задаются через ansible.cfg
# при запуске плейбука можно указать инвентарь через опцию -i=/path/to/inventory
# как правило файл с инвентарем кладут в папку с проектом
# инвентарь также может быть динамическим

[webservers]
web1.example.com
web2.example.com

[fileservers]
file1.example.com
file2.example.com

[servers:children]
webservers
fileservers

ansible -i inventory all --list-hosts   #вывести все хосты из инвентаря
ansible -i inventory ungrouped --list-hosts   #вывести хосты из инвентаря, не попавшие ни в одну группу
